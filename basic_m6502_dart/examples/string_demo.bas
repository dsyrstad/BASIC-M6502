10 REM STRING MANIPULATION DEMONSTRATION
20 REM SHOWS VARIOUS STRING FUNCTIONS
30 PRINT "STRING MANIPULATION DEMO"
40 PRINT "========================"
50 PRINT
60 INPUT "ENTER A STRING"; S$
70 PRINT
80 PRINT "ORIGINAL STRING: "; CHR$(34); S$; CHR$(34)
90 L = LEN(S$)
100 PRINT "LENGTH:"; L
110 PRINT
120 REM DEMONSTRATE LEFT$
130 IF L >= 3 THEN PRINT "FIRST 3 CHARS: "; CHR$(34); LEFT$(S$, 3); CHR$(34)
140 REM DEMONSTRATE RIGHT$
150 IF L >= 3 THEN PRINT "LAST 3 CHARS: "; CHR$(34); RIGHT$(S$, 3); CHR$(34)
160 REM DEMONSTRATE MID$
170 IF L >= 5 THEN PRINT "MIDDLE 3 CHARS (FROM POS 2): "; CHR$(34); MID$(S$, 2, 3); CHR$(34)
180 PRINT
190 REM DEMONSTRATE ASC AND CHR$
200 PRINT "ASCII VALUES:"
210 FOR I = 1 TO L
220   C$ = MID$(S$, I, 1)
230   A = ASC(C$)
240   PRINT "  '"; C$; "' = ASCII"; A
250 NEXT I
260 PRINT
270 REM STRING CONCATENATION DEMO
280 INPUT "ENTER ANOTHER STRING TO CONCATENATE"; T$
290 U$ = S$ + T$
300 PRINT "CONCATENATED: "; CHR$(34); U$; CHR$(34)
310 PRINT
320 REM REVERSE STRING DEMONSTRATION
330 PRINT "REVERSED STRING: "; CHR$(34);
340 FOR I = L TO 1 STEP -1
350   PRINT MID$(S$, I, 1);
360 NEXT I
370 PRINT CHR$(34)
380 END