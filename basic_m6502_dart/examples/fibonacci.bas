10 REM FIBONACCI SEQUENCE GENERATOR
20 REM GENERATES THE FIBONACCI SEQUENCE UP TO N TERMS
30 PRINT "FIBONACCI SEQUENCE GENERATOR"
40 PRINT "============================"
50 PRINT
60 INPUT "HOW MANY FIBONACCI NUMBERS"; N
70 IF N < 1 THEN PRINT "PLEASE ENTER A POSITIVE NUMBER" : GOTO 60
80 PRINT
90 PRINT "THE FIRST"; N; "FIBONACCI NUMBERS:"
100 PRINT
110 REM INITIALIZE FIRST TWO NUMBERS
120 F1 = 0 : F2 = 1
130 IF N >= 1 THEN PRINT "1:"; F1
140 IF N >= 2 THEN PRINT "2:"; F2
150 REM GENERATE REMAINING FIBONACCI NUMBERS
160 FOR I = 3 TO N
170   F3 = F1 + F2
180   PRINT STR$(I) + ":"; F3
190   F1 = F2
