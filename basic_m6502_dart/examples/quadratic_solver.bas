10 REM QUADRATIC EQUATION SOLVER
20 REM SOLVES AX^2 + BX + C = 0
30 PRINT "QUADRATIC EQUATION SOLVER"
40 PRINT "========================="
50 PRINT
60 PRINT "SOLVES: AX^2 + BX + C = 0"
70 PRINT
80 INPUT "ENTER COEFFICIENT A"; A
90 IF A = 0 THEN PRINT "NOT A QUADRATIC EQUATION (A CANNOT BE 0)!" : GOTO 80
100 INPUT "ENTER COEFFICIENT B"; B
110 INPUT "ENTER COEFFICIENT C"; C
120 PRINT
130 PRINT "EQUATION: "; A; "X^2";
140 IF B >= 0 THEN PRINT " +"; B; "X"; ELSE PRINT " "; B; "X";
150 IF C >= 0 THEN PRINT " +"; C; ELSE PRINT " "; C;
160 PRINT " = 0"
170 PRINT
180 REM CALCULATE DISCRIMINANT
190 D = B * B - 4 * A * C
200 PRINT "DISCRIMINANT ="; D
210 PRINT
220 IF D > 0 THEN 260
230 IF D = 0 THEN 330
240 REM COMPLEX ROOTS
250 GOTO 380
260 REM TWO REAL ROOTS
270 PRINT "TWO REAL ROOTS:"
280 X1 = (-B + SQR(D)) / (2 * A)
290 X2 = (-B - SQR(D)) / (2 * A)
300 PRINT "X1 ="; X1
310 PRINT "X2 ="; X2
320 GOTO 440
330 REM ONE REAL ROOT (REPEATED)
340 PRINT "ONE REAL ROOT (REPEATED):"
350 X1 = -B / (2 * A)
360 PRINT "X ="; X1
370 GOTO 440
380 REM COMPLEX ROOTS
390 PRINT "TWO COMPLEX ROOTS:"
400 R = -B / (2 * A)
410 I = SQR(-D) / (2 * A)
420 PRINT "X1 ="; R; "+"; I; "i"
430 PRINT "X2 ="; R; "-"; I; "i"
440 PRINT
