10 REM SIMPLE CALCULATOR
20 REM PERFORMS BASIC ARITHMETIC OPERATIONS
30 PRINT "SIMPLE CALCULATOR"
40 PRINT "================="
50 PRINT
60 PRINT "OPERATIONS:"
70 PRINT "  + : ADDITION"
80 PRINT "  - : SUBTRACTION"
90 PRINT "  * : MULTIPLICATION"
100 PRINT "  / : DIVISION"
110 PRINT "  ^ : EXPONENTIATION"
120 PRINT "  S : SQUARE ROOT"
130 PRINT "  Q : QUIT"
140 PRINT
150 INPUT "ENTER OPERATION"; O$
160 IF O$ = "Q" OR O$ = "q" THEN PRINT "GOODBYE!" : END
170 IF O$ = "S" OR O$ = "s" THEN 400
180 REM GET TWO OPERANDS FOR BINARY OPERATIONS
190 INPUT "ENTER FIRST NUMBER"; A
200 INPUT "ENTER SECOND NUMBER"; B
210 REM PERFORM OPERATION
220 IF O$ = "+" THEN R = A + B : GOTO 300
230 IF O$ = "-" THEN R = A - B : GOTO 300
240 IF O$ = "*" THEN R = A * B : GOTO 300
250 IF O$ = "/" THEN 260 ELSE 280
260 IF B = 0 THEN PRINT "ERROR: DIVISION BY ZERO!" : GOTO 140
270 R = A / B : GOTO 300
280 IF O$ = "^" THEN R = A ^ B : GOTO 300
290 PRINT "INVALID OPERATION!" : GOTO 140
300 REM DISPLAY RESULT
310 PRINT
320 PRINT "RESULT: "; A; O$; B; "="; R
330 PRINT
340 INPUT "ANOTHER CALCULATION (Y/N)"; C$
350 IF C$ = "Y" OR C$ = "y" THEN 50
360 PRINT "GOODBYE!"
370 END
400 REM SQUARE ROOT
410 INPUT "ENTER NUMBER"; A
420 IF A < 0 THEN PRINT "ERROR: CANNOT TAKE SQUARE ROOT OF NEGATIVE NUMBER!" : GOTO 140
430 R = SQR(A)
440 PRINT
450 PRINT "RESULT: SQUARE ROOT OF"; A; "="; R
460 GOTO 330