20 REM A CLASSIC BASIC GAME THAT DEMONSTRATES
30 REM RANDOM NUMBERS, INPUT, AND CONTROL FLOW
40 PRINT "NUMBER GUESSING GAME"
50 PRINT "===================="
60 PRINT
70 REM GENERATE RANDOM NUMBER BETWEEN 1 AND 100
80 N = INT(RND(1) * 100) + 1
90 G = 0 : REM GUESS COUNTER
100 PRINT "I'M THINKING OF A NUMBER BETWEEN 1 AND 100"
110 PRINT "TRY TO GUESS IT!"
120 PRINT
130 REM MAIN GAME LOOP
140 G = G + 1
150 INPUT "YOUR GUESS"; X
160 IF X = N THEN 240
170 IF X < N THEN 200
180 PRINT "TOO HIGH! TRY AGAIN."
190 GOTO 140
200 PRINT "TOO LOW! TRY AGAIN."
210 GOTO 140
240 REM PLAYER WON
250 PRINT
260 PRINT "CONGRATULATIONS! YOU GOT IT!"
270 PRINT "THE NUMBER WAS"; N
280 PRINT "IT TOOK YOU"; G; "GUESSES"
290 PRINT
300 INPUT "PLAY AGAIN (Y/N)"; A$
310 IF A$ = "Y" OR A$ = "y" THEN 40
320 PRINT "THANKS FOR PLAYING!"
330 END