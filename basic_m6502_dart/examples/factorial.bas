100 IF N > 12 THEN PRINT "NUMBER TOO LARGE! (RESULT WOULD OVERFLOW)" : GOTO 80
110 REM CALCULATE FACTORIAL ITERATIVELY
120 F = 1
130 IF N = 0 THEN 160
140 FOR I = 1 TO N
150   F = F * I
160 NEXT I
170 PRINT
180 PRINT N; "! ="; F
190 PRINT
