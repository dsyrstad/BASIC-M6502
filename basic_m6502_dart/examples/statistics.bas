10 REM ARRAY STATISTICS CALCULATOR
20 REM CALCULATES MEAN, MEDIAN, MIN, MAX, AND STANDARD DEVIATION
30 PRINT "STATISTICS CALCULATOR"
40 PRINT "====================="
50 PRINT
60 INPUT "HOW MANY DATA POINTS"; N
70 IF N < 1 THEN PRINT "NEED AT LEAST 1 DATA POINT!" : GOTO 60
80 DIM D(N)
90 PRINT
100 PRINT "ENTER"; N; "DATA VALUES:"
110 S = 0 : REM SUM
120 FOR I = 1 TO N
130   PRINT "VALUE"; I;
140   INPUT D(I)
150   S = S + D(I)
160 NEXT I
170 PRINT
180 REM CALCULATE MEAN
190 M = S / N
200 PRINT "MEAN (AVERAGE):"; M
210 REM FIND MIN AND MAX
220 MIN = D(1) : MAX = D(1)
230 FOR I = 2 TO N
240   IF D(I) < MIN THEN MIN = D(I)
250   IF D(I) > MAX THEN MAX = D(I)
260 NEXT I
270 PRINT "MINIMUM:"; MIN
280 PRINT "MAXIMUM:"; MAX
290 PRINT "RANGE:"; MAX - MIN
300 REM CALCULATE STANDARD DEVIATION
310 V = 0 : REM VARIANCE SUM
320 FOR I = 1 TO N
330   V = V + (D(I) - M) * (D(I) - M)
340 NEXT I
350 IF N > 1 THEN SD = SQR(V / (N - 1)) ELSE SD = 0
360 PRINT "STANDARD DEVIATION:"; SD
370 REM SORT FOR MEDIAN (USING BUBBLE SORT)
380 FOR I = 1 TO N - 1
390   FOR J = 1 TO N - I
400     IF D(J) > D(J+1) THEN T = D(J) : D(J) = D(J+1) : D(J+1) = T
410   NEXT J
420 NEXT I
430 REM CALCULATE MEDIAN
440 IF N / 2 = INT(N / 2) THEN MD = (D(N/2) + D(N/2+1)) / 2 ELSE MD = D((N+1)/2)
450 PRINT "MEDIAN:"; MD
460 PRINT
470 PRINT "SORTED DATA:"
480 FOR I = 1 TO N : PRINT D(I); : NEXT I
490 PRINT
500 END