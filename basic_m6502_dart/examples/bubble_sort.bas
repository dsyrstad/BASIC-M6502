10 REM BUBBLE SORT DEMONSTRATION
20 REM SORTS AN ARRAY OF NUMBERS USING BUBBLE SORT
30 PRINT "BUBBLE SORT DEMONSTRATION"
40 PRINT "========================="
50 PRINT
60 INPUT "HOW MANY NUMBERS TO SORT"; N
70 IF N < 2 THEN PRINT "NEED AT LEAST 2 NUMBERS!" : GOTO 60
80 DIM A(N)
90 PRINT
100 PRINT "ENTER"; N; "NUMBERS:"
110 FOR I = 1 TO N
120   PRINT "NUMBER"; I;
130   INPUT A(I)
140 NEXT I
150 PRINT
160 PRINT "ORIGINAL ARRAY:"
170 FOR I = 1 TO N : PRINT A(I); : NEXT I
180 PRINT
190 REM BUBBLE SORT ALGORITHM
200 FOR I = 1 TO N - 1
210   S = 0 : REM SWAP FLAG
220   FOR J = 1 TO N - I
230     IF A(J) > A(J+1) THEN T = A(J) : A(J) = A(J+1) : A(J+1) = T : S = 1
240   NEXT J
250   REM IF NO SWAPS, ARRAY IS SORTED
260   IF S = 0 THEN GOTO 280
270 NEXT I
280 PRINT
290 PRINT "SORTED ARRAY:"
300 FOR I = 1 TO N : PRINT A(I); : NEXT I
310 PRINT
320 END